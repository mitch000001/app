.row
  .col-xs-12.col-md-6.form-group{class: form_error?(resource, :email)}
    = form.email_field :email, placeholder: I18n.t(:"helpers.placeholder.user.email"), class: 'form-control', type: :email
    %small
      = form_errors resource, :email
  .col-xs-12.col-md-6.form-group
    = link_to I18n.t(:"nav.subnav.update_password"), edit_password_path, class: "btn btn-warning"
.row
  .col-xs-12.col-md-6.form-group{class: form_error?(resource, :gravatar)}
    = form.email_field :gravatar, placeholder: I18n.t(:"helpers.placeholder.user.gravatar"), class: 'form-control'
    %small
      = form_errors resource, :gravatar
  .col-xs-12.col-md-6.form-group
    %hr
    - if current_user.dropbox_token.present?
      %a.btn.btn-danger{href: deactivate_dropbox_path}
        %i.fa.fa-dropbox
        = I18n.t(:"actions.dropbox_unlink")
    - else
      %a.btn.btn-primary{href: start_dropbox_path}
        %i.fa.fa-dropbox
        = I18n.t(:"actions.dropbox_link")
.row
  .col-xs-12.col-md-6.form-group
  .col-xs-12.col-md-6.form-group
    %hr
    - if current_user.harvest_token.present?
      %a.btn.btn-primary{href: full_import_harvest_path}
        %i.fa.fa-cloud-download
          = I18n.t(:"actions.harvest_full_import")
      %br
      %br
      %a.btn.btn-danger{href: deactivate_harvest_path}
        %i.fa.fa-time
        = I18n.t(:"actions.harvest_unlink")
    - else
      %a.btn.btn-primary{href: start_harvest_path}
        %i.fa.fa-time
        = I18n.t(:"actions.harvest_link")
